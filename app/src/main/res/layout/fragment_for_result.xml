<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.lazy.ForResultFragment">

    <com.yyxnb.view.titlebar.TitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tb_centerText="回传值" />

    <EditText
        android:id="@+id/etInput"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="30dp"
        android:hint="输入要回调的内容" />

    <com.noober.background.view.BLTextView
        android:id="@+id/tvConfirm"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="50dp"
        app:bl_corners_radius="2dp"
        app:bl_gradient_angle="0"
        app:bl_gradient_endColor="@color/red"
        app:bl_gradient_startColor="#63B8FF"
        android:gravity="center"
        android:text="点击回调"
        android:textColor="@color/white"
        tools:ignore="MissingPrefix" />

</LinearLayout>